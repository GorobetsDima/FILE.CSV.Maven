<?xml version  = "1.0" encoding ="UTF-8"?>
        <!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

<appender name="appenderRollFA" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="appenderRFA.log"/>
    <param name="MaxFileSize" value="10MB"/>
    <param name="Encoding" value="UTF-8"/>
    <layout class="org.apache.log4j.EnhancedPatternLayout">
        <param name="ConversionPattern" value="%d{ISO8601} [%-5p][%-30.50c] - %m%n"/>
    </layout>
</appender>

<appender name="appenderConsole" class="org.apache.log4j.ConsoleAppender">
    <param name="Encoding" value="UTF-8"/>
    <layout class="org.apache.log4j.EnhancedPatternLayout">
        <param name="ConversionPattern" value="[%-5p] %d{ISO8601}[%30c] - %m%n"/>
    </layout>
</appender>

<root>
    <priority value="WARN"/>
    <appender-ref ref="appenderRollFA"/>
    <appender-ref ref="appenderConsole"/>
</root>

</log4j:configuration>